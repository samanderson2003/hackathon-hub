* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary: #6366f1;
    --secondary: #8b5cf6;
    --accent: #ec4899;
    --success: #10b981;
    --warning: #f59e0b;
    --danger: #ef4444;
    --dark: #1e293b;
    --darker: #0f172a;
    --light: #f8fafc;
    --gray: #64748b;
}

body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: var(--dark);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 2rem;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
    animation: backgroundScroll 20s linear infinite;
}

@keyframes backgroundScroll {
    0% { transform: translateY(0); }
    100% { transform: translateY(100px); }
}

.hero-content {
    position: relative;
    z-index: 1;
    animation: fadeInUp 1s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.glitch {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    text-transform: uppercase;
    position: relative;
    letter-spacing: 0.1em;
    animation: glitch 3s infinite;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

@keyframes glitch {
    0%, 100% {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    25% {
        text-shadow: -2px -2px 4px rgba(236, 72, 153, 0.5),
                     2px 2px 4px rgba(99, 102, 241, 0.5);
    }
    50% {
        text-shadow: 2px -2px 4px rgba(99, 102, 241, 0.5),
                     -2px 2px 4px rgba(236, 72, 153, 0.5);
    }
}

.subtitle {
    font-size: clamp(1rem, 3vw, 1.5rem);
    margin: 1.5rem 0;
    opacity: 0.95;
    animation: fadeInUp 1s ease-out 0.3s both;
}

/* Timer */
.timer {
    display: flex;
    gap: 2rem;
    margin-top: 3rem;
    animation: fadeInUp 1s ease-out 0.6s both;
}

.time-block {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: 1.5rem 2rem;
    border-radius: 15px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    min-width: 120px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.time-block:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.time {
    display: block;
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
}

.label {
    display: block;
    font-size: 0.9rem;
    margin-top: 0.5rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Scroll Indicator */
.scroll-indicator {
    position: absolute;
    bottom: 2rem;
    animation: bounce 2s infinite;
}

.scroll-indicator span {
    display: block;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    opacity: 0.8;
}

.arrow-down {
    width: 30px;
    height: 30px;
    border-left: 2px solid white;
    border-bottom: 2px solid white;
    transform: rotate(-45deg);
    margin: 0 auto;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10px);
    }
    60% {
        transform: translateY(-5px);
    }
}

/* Problems Container */
.problems-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem;
    background: var(--light);
}

.section-header {
    text-align: center;
    margin-bottom: 4rem;
}

.section-header h2 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    color: var(--darker);
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
}

.section-header h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--accent));
    border-radius: 2px;
}

.section-header p {
    font-size: 1.2rem;
    color: var(--gray);
}

/* Problem Cards */
.problem-card {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    margin-bottom: 3rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    animation: slideIn 0.6s ease-out;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.problem-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
}

.problem-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 100%;
    background: linear-gradient(180deg, var(--primary), var(--accent));
}

.problem-card[data-problem="1"]::before {
    background: linear-gradient(180deg, #10b981, #059669);
}

.problem-card[data-problem="2"]::before {
    background: linear-gradient(180deg, #6366f1, #4f46e5);
}

.problem-card[data-problem="3"]::before {
    background: linear-gradient(180deg, #ec4899, #db2777);
}

.problem-card[data-problem="4"]::before {
    background: linear-gradient(180deg, #f59e0b, #d97706);
}

.problem-number {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-size: 6rem;
    font-weight: 700;
    color: rgba(0, 0, 0, 0.03);
    line-height: 1;
    pointer-events: none;
}

.problem-content {
    position: relative;
    z-index: 1;
}

.problem-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
}

.problem-header h3 {
    font-size: clamp(1.5rem, 4vw, 2.2rem);
    color: var(--darker);
}

.difficulty {
    padding: 0.5rem 1.2rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.difficulty.easy {
    background: linear-gradient(135deg, #d4fc79 0%, #96e6a1 100%);
    color: #065f46;
}

.difficulty.medium {
    background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
    color: #92400e;
}

.difficulty.hard {
    background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
    color: #991b1b;
}

.tagline {
    font-size: 1.1rem;
    color: var(--gray);
    font-style: italic;
    margin-bottom: 2rem;
}

.section {
    margin-bottom: 2rem;
}

.section h4 {
    font-size: 1.3rem;
    color: var(--darker);
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.section p {
    color: var(--dark);
    line-height: 1.8;
    margin-bottom: 1rem;
}

.section ul {
    list-style: none;
    padding-left: 0;
}

.section ul li {
    padding: 0.8rem 0;
    padding-left: 2rem;
    position: relative;
    color: var(--dark);
    line-height: 1.8;
}

.section ul li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: var(--primary);
    font-weight: 700;
    font-size: 1.2rem;
}

/* Tech Stack */
.tech-stack {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px dashed rgba(0, 0, 0, 0.1);
}

.tech-stack h4 {
    font-size: 1.2rem;
    color: var(--darker);
    margin-bottom: 1rem;
}

.tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
}

.tag {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.tag:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3);
}

/* Footer */
.footer {
    background: var(--darker);
    color: white;
    padding: 3rem 2rem;
    text-align: center;
}

.footer-content h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
}

.footer-content p {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 0.5rem;
}

.date {
    font-size: 1rem;
    margin-top: 1.5rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    display: inline-block;
}

/* Responsive Design */
@media (max-width: 768px) {
    .timer {
        gap: 1rem;
    }
    
    .time-block {
        padding: 1rem 1.5rem;
        min-width: 90px;
    }
    
    .time {
        font-size: 2rem;
    }
    
    .problem-card {
        padding: 2rem 1.5rem;
    }
    
    .problem-number {
        font-size: 4rem;
        top: 1rem;
        right: 1rem;
    }
    
    .problem-header {
        flex-direction: column;
        align-items: flex-start;
    }
}

/* Animations */
@keyframes pulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
}

/* Print Styles */
@media print {
    .hero, .scroll-indicator, .footer {
        display: none;
    }
    
    .problem-card {
        page-break-inside: avoid;
        box-shadow: none;
        border: 1px solid #ddd;
    }
}
